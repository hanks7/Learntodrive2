<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the main color -->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- 给View的上 左 右设置8dp的边框 -->
    <item
        android:left="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/gray" />
        </shape>
    </item>
</layer-list>