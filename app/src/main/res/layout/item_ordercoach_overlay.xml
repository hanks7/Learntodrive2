<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
<RelativeLayout
    android:background="@color/white"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_overlay_iv_head"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/person_default_logo2"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@+id/item_overlay_iv_head"
        android:layout_toEndOf="@+id/item_overlay_iv_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李磊"
                android:textColor="@color/mianTextColor" />

            <RatingBar
                android:id="@+id/item_overlay_ratingbar"
                style="@style/MyDiyRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginLeft="@dimen/dp7"
                android:layout_marginRight="@dimen/dp7"
                android:layout_gravity="center_vertical"
                android:rating="4" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_overlay_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mianTextColor"
                android:text="C1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp7"
                android:layout_marginLeft="@dimen/dp7"
                android:text="科目二"
                android:textColor="@color/mianTextColor"
                android:id="@+id/item_overlay_tv_class" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
    </LinearLayout>