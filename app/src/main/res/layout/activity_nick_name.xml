<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context="com.jxjycn.learntodrive.mine.NickNameActivity">

    <include
        android:id="@+id/title"
        layout="@layout/app_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp13"
        android:background="@color/white"
        android:padding="@dimen/dp13">


        <EditText
            android:id="@+id/nick_name_edt_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:background="@null"
            android:hint="@string/reallyname"
            android:maxLength="16"
            android:textColor="@color/mianTextColor"
            android:textCursorDrawable="@drawable/curson" />


    </RelativeLayout>

</RelativeLayout>
