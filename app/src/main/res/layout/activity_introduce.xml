<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    tools:context="com.jxjycn.learntodrive.mine.IntroduceActivity">

    <include
        android:id="@+id/title"
        layout="@layout/app_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp13"
        android:background="@color/white"
        android:padding="@dimen/dp7">


        <EditText
            android:id="@+id/introduce_edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:background="@null"


            android:hint="@string/introduce"
            android:maxLength="20"
            android:textColor="@color/mianTextColor"
            android:textCursorDrawable="@drawable/curson" />
        <TextView
            android:id="@+id/introduce_edt_input_count"
            android:layout_below="@+id/introduce_edt_input"
            android:layout_width="wrap_content"
            android:text="0/20"
            android:layout_marginRight="@dimen/dp5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp13"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>

